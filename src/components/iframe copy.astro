---
const { data } = Astro.props
import { Vimeo } from '@astro-community/astro-embed-vimeo'
---

<div class="iframe-container">
	<Vimeo
		id={data.id}
		params="autoplay=1&muted=1&controls=0&loop=1&background=1"
		style={'position: absolute; width: 100%; height: 100%'}
	/>

	<!-- style={{ position: 'absolute', width: '100%', height: '100%' }} -->

