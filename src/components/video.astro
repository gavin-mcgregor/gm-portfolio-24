---
import culannVideo from '/assets/videos/culann.mp4'
console.log(culannVideo)
const { data } = Astro.props
---

<div class="video-wrapper">
	<video width={data.width} height={data.height} autoplay playsinline muted>
		<source src={data.url} type="video/mp4" />
	</video>
</div>

<style>
	.video-wrapper {
		position: absolute;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background-color: #333;
	}
	video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		border: none;
	}
</style>
