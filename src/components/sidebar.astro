<aside id="infoPanel">
	<div class="inner-panel">
		<div class="info-container">
			<div class="content-container text-white">
				<div class="title-container">
					<h2>Additional Information</h2>
				</div>
				<div class="text-container">
					<p>Built w/ Astro.js & Netlify</p>
					<p>
						The project files for this website are available on github. The canvas element is being
						drawn with vanilla javascript in the browser, you can change the speed and number of
						rings paramaters to watch the animation change in real time.
					</p>
					<p>
						<a
							class="text-underline"
							href="https://github.com/gavin-mcgregor/gm-portfolio-24"
							target="_blank"
						>
							View files on Github
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</aside>

<script is:inline>
	function handleToggle() {
		const button = document.querySelector('button')
		button.addEventListener('click', () => {
			const aside = document.querySelector('#infoPanel')
			aside.classList.toggle('visible')
			const body = document.querySelector('body')
			body.classList.toggle('more-info-active')

			if (aside.classList.contains('trans')) {
				setTimeout(() => {
					aside.classList.remove('trans')
				}, 500)
			} else {
				aside.classList.add('trans')
			}
		})
	}
	document.addEventListener('DOMContentLoaded', handleToggle)
</script>

<style>
	#infoPanel {
		position: absolute;
		top: 0;
		right: 0;
		width: 0;
		height: 120vh;
		background-color: #333;
		transition: width 0.3s ease-in-out;
		z-index: 8;
		overflow: hidden;
	}

	.inner-panel {
		position: absolute;
		min-width: 33vw;
	}

	#infoPanel.visible {
		width: 33vw;
	}

	.info-container {
		height: 100vh;
		width: calc(95% - 2rem);
		margin: 0 auto;
		display: flex;
		align-items: center;
		padding: 2rem;
	}

	.content-container {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		margin-bottom: 50%;
	}

	.text-container {
		max-width: 55ch;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	@media (max-width: 980px) {
		.info-container {
			padding: 2rem 0;
		}
		.inner-panel {
			min-width: 50vw;
		}
		#infoPanel.visible {
			width: 50vw;
		}
	}

	@media (max-width: 640px) {
		.inner-panel {
			min-width: 75vw;
		}
		#infoPanel.visible {
			width: 75vw;
		}
	}
</style>
