---
import Layout from '../layouts/layout.astro'
import Hero from '../components/hero.astro'
import Intro from '../components/intro.astro'
import Experience from '../components/experience.astro'
import Gallery from '../components/gallery.astro'
---

<Layout
	page="home"
	classArray={['page-container']}
	title="Gavin McGregor | Designer and developer portfolio 2024"
	description="A small portfolio with highlights of some design visuals and a rundown down of past projects."
>
	<main class="row-bottom-x2">
		<Hero />
		<Intro />
		<Experience />
		<Gallery />
	</main>
</Layout>
